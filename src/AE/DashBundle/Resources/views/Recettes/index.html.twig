{% extends '::layout_dashboard.php.twig' %}

{% block title %}
    <title>SmartCompta - Recettes</title>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-file {
            position: relative;
            overflow: hidden;
            margin-bottom: 20px;
        }
        .btn-file input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            min-width: 100%;
            min-height: 100%;
            font-size: 100px;
            text-align: center;
            filter: alpha(opacity=0);
            opacity: 0;
            outline: none;
            background: white;
            cursor: inherit;
            display: block;
        }
    </style>
{% endblock %}

{% block header %}
    <div class="invisible" style="padding: 10px">
        <span>a</span>
    </div>
{% endblock %}

{% block aeplatform_body %}

    <div class="row col-lg-12 col-md-12 jumbotron">
        <ul class="pull-right" style="margin-bottom: 30px; margin-top: -20px;">
            <a class="btn btn-default page-scroll" href="#new">
                Nouvelle Recette
            </a>
        </ul>
        <table class="records_list table table-responsive text-center">
            <thead>
                <tr>
                    {#<th>Id</th>#}
                    <th>Date</th>
                    <th>Montant</th>
                    <th>Client</th>
                    <th>Mode de paiement</th>
                    <th>Justificatif</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    {#<td><a href="{{ path('recettes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                    <td style="width: 140px;">{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
                    <td style="width: 140px;">{{ entity.montant }} €</td>
                    <td style="width: 140px;">{{ entity.client }}</td>
                    <td style="width: 140px;">{{ entity.modeDePaiement }}</td>
                    <td><img class="img-responsive img-thumbnail" src="{{ asset('uploads/justificatifs/' ~ entity.justificatif) }}"/></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('recettes_show', { 'id': entity.id }) }}">Aperçu</a>
                            </li>
                            <li>
                                <a href="{{ path('recettes_edit', { 'id': entity.id }) }}">Édition</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row col-lg-12 col-md-12 jumbotron">
        <h3 id="new" style="margin-top: -10px; margin-bottom: 30px;">Créer une nouvelle recette</h3>
        {#{% include("AEComptaBundle:Recettes:new.html.twig") %}#}
        {% form_theme form '::Form/field.php.twig' %}

        {{ form_start(form) }}

        {{ form_row(form.date) }}
        {{ form_widget(form.date) }}

        {{ form_row(form.montant) }}
        {{ form_widget(form.montant) }}

        {{ form_row(form.client) }}
        {{ form_widget(form.client) }}

        {{ form_row(form.modeDePaiement) }}
        {{ form_widget(form.modeDePaiement) }}


        <div class="btn-default btn btn-file">
            {{ form_row(form.justificatif) }}
            {{ form_widget(form.justificatif) }}
        </div>


        {{ form_end(form) }}

    </div>
{% endblock %}

{% block script %}
    {{ parent() }}
    <script src="{{ asset('bootstrap/js/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/scrolling.js') }}"></script>
{% endblock %}