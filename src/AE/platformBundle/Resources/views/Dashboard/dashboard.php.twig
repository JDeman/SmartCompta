{% extends "::layout_dashboard.php.twig" %}

{% block title %}
	Dashboard
{% endblock %}

{% block header %}
	<header class="intro-header" style="background-image: url({{asset('img/imgdhb.jpg')}}); margin-top: 60px; margin-bottom: 0px;">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
					<div class="page-heading">
						<h1>Dashboard</h1>
						<hr class="small">
						<!--span class="subheading">Have questions? I have answers (maybe).</span-->
					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}

{% block aeplatform_body %}
<div class="col-lg-11 col-md-11">
	<div class="jumbotron">
		<p style="margin-left: 20px;" class="glyphicon"> Chiffre d'affaire actuel : {{ chiffreAffaire }}
			<span class="glyphicon glyphicon-euro"></span>
		</p>
		<br>
		<p style="margin-left: 20px;" class="glyphicon"> Déclarez votre chiffre d'affaire
		</p>
		<br>
		<p style="margin-left: 20px;" class="glyphicon"> La date limite est le {#{  }#}
		</p>
	</div>
	<div class="jumbotron">
		<ul style="margin-left: 20px;" class="glyphicon list-unstyled">
			<li>Montant impôsable : {{ montantImposable }} €</li>
			<ul style="padding-top: 15px;">
				<li> {{ montantCotisationsSoc }} € de cotisation sociale</li>
				<li> {{ montantImpotFormationPro }} € d'impôt sur la formation professionnelle</li>
				<li> {{ montantImpotSurRevenu }} € d'impôts sur le revenu{% if liberatoire %}, à payer séparément, une seule fois dans l'année {% endif %}
				</li>
			</ul>
		</ul>
	</div>
</div>
{% endblock %}

