{% trans_default_domain 'FOSUserBundle' %}

<div class="container" style="margin-top: 80px">
    <h1 class="text-center">Inscription</h1>
    <div class="row">
        <div style="margin-top: 40px;" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-default pull-right"  value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>