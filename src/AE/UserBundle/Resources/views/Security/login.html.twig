{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    {% block button %}
    {% endblock button %}

<form action="{{ path("fos_user_security_check") }}" method="post" style="margin-top: 60px;" class="col-lg-3 col-lg-offset-4 col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="row control-group form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
    </div>

    <div class="row control-group form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" class="form-control"/>
    </div>

    <div class="row control-group form-group pull-right">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="row" style="margin-top: 70px">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default form-group center-block" />
    </div>
</form>
{% endblock fos_user_content %}

{% block footer %}
        <div class="row col-lg-12 col-md-12 col-xs-12">
        {{ parent() }}
        </div>
{% endblock %}