<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset="utf-8">
    <!-- Vérifie la compabilité IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Compabilité mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Site Saas{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap/css/clean-blog.min.css') }}" rel="stylesheet">
        <link href="{{ absolute_url(asset('bootstrap/css/full-slider.css')) }}" rel="stylesheet">
        <link href="{{ absolute_url(asset('bootstrap/css/simple-sidebar.css')) }}" rel="stylesheet">
        <link href="{{ asset('style.css" rel="stylesheet') }}">
    {% endblock %}

    <title></title>

    <!-- Code à rajouter pour les navigateurs ne prennant pas en compte HTML5 et CSS3 (attention Respond.js peut ne pas fonctionner avec les CDN -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    {% block javascript_header %}
    <!--[if lt IE 9] >
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    < [endif]-->
    {% endblock %}
</head>

<body>
{% block navbar %}

    <!-- Barre de navigation -->
    {{ include("::navbar.php.twig") }}
{% endblock navbar %}

    {% block header %}
    {% endblock %}
    {% block body %}
        {% block button %}
        {% endblock button %}

        <div style="margin-top: 50px;">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}" style="margin-left: 30px; margin-top: 30px;">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        </div>

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    {% endblock %}

{% block footer %}
    <!-- Le pied de page -->
    <footer class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                    <hr class="small-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="{{ path('mremi_contact_form') }}" class="copyright">Nous écrire</a>
                        </li>
                        <li>
                            <a href="{{ path('page_faq') }}" class="copyright">FAQ</a>
                        </li>
                        <li>
                            <a href="#"class="copyright">CGV</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; 2015</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock footer %}

    <!-- Script JavaScript -->
    <script src="{{ absolute_url(asset('bootstrap/js/jquery.js')) }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ absolute_url(asset('bootstrap/js/navbar_slide.js')) }}"></script>
    {%  block javascript %}
        {% block script %}
        {% endblock %}
    {% endblock %}

</body>
</html>